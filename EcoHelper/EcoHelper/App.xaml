<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoHelper.App">

    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#2196F3</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#C0C0C0" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
            <OnPlatform x:TypeArguments="x:String" x:Key="Domine-Bold">
                <On Platform="Android" Value="Domine-Bold#Domine" />
                <On Platform="iOS" Value="Domine-Bold" />
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="Domine-Normal">
                <On Platform="Android" Value="Domine-Regular#Domine" />
                <On Platform="iOS" Value="Domine-Regular" />
            </OnPlatform>
            </ResourceDictionary>
    </Application.Resources>
    
</Application>